{
  "manifest_version": 3,
  "name": "OpenAI Poetic Assistant",
  "version": "1.0",
  "description": "An Edge extension that sends a request to the OpenAI API and retrieves a poetic explanation.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
